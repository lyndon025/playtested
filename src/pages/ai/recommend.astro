import GameSelector from "../../components/GameSelector.astro";
---

<BlogLayout title="AI Game Recommender">
  <Header />

  <html lang="en" class="scroll-smooth">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>AI Gaming Assistant - Game Recommendations & Comparisons</title>
      <link rel="stylesheet" href="/src/styles/global.css" />
    </head>
    <body
      class="bg-white dark:bg-slate-900 text-gray-900 dark:text-gray-100 min-h-screen"
    >
      <!-- Feature 1: Game Recommendations -->
      <section id="recommendations" class="mb-16">
        <div
          class="bg-gradient-to-br mt-10 from-blue-50 to-indigo-50 dark:from-slate-800 dark:to-slate-900 rounded-2xl p-8 border border-blue-100 dark:border-slate-700 shadow-lg"
        >
          <div
            class="flex flex-col sm:flex-row items-center sm:items-start space-y-4 sm:space-y-0 sm:space-x-4 mb-6 text-center sm:text-left"
          >
            <div class="bg-blue-500 rounded-full p-3 shrink-0">
