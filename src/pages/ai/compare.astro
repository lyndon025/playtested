---
import BlogLayout from "../../layouts/BlogLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import GameSelector from "../../components/GameSelector.astro";
---

<BlogLayout title="AI Game Comparator">
  <Header />

  <!-- Feature 2: Game Comparison -->
  <section id="comparison" class="mb-16">
    <div
      class="bg-gradient-to-br mt-10 from-purple-50 to-pink-50 dark:from-slate-800 dark:to-slate-900 rounded-2xl p-8 border border-purple-100 dark:border-slate-700 shadow-lg"
    >
      <div class="flex items-center space-x-3 mb-6">
        <div class="bg-purple-500 rounded-full p-3">
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            ></path>
          </svg>
        </div>
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
            AI Game Comparison
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mt-1">
            Can't decide between different games? Let AI help you choose
          </p>
        </div>
      </div>

      <div
        class="bg-white dark:bg-slate-800 rounded-xl p-6 border border-purple-200 dark:border-slate-600"
      >
        <div class="mb-4">
          <h3
            class="text-lg font-semibold mb-2 text-gray-800 dark:text-gray-200"
          >
            Quick Comparison:
          </h3>
          <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
            <li>
              âš¡ <strong>Brief Analysis:</strong> Get a concise 1-2 paragraph comparison
            </li>
            <li>
              ðŸŽ® <strong>Key Differences:</strong> Gameplay, story, and vibe at a
              glance
            </li>
            <li>
              ðŸ’¡ <strong>Quick Decision:</strong> Helps you choose faster
            </li>
          </ul>
        </div>

        <GameSelector
          maxSelection={5}
