{
  "name": "storyteller",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "astro dev --host",
    "build:search": "node scripts/build-search-index.mjs",
    "build:rag": "node scripts/build-rag-index.mjs",
    "build": "npm run build:search && npm run build:rag && astro build",
    "preview": "astro preview",
    "dev:cf": "npm run build && wrangler pages dev dist --local",
    "dev:functions": "wrangler pages dev --local --proxy 4321",
    "prepare:search": "astro run scripts/export-articles.ts"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.8",
    "astro": "^5.12.8",
    "marked": "^16.1.2",
    "minisearch": "^7.1.2",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@cloudflare/workers-types": "^4.20260113.0",
    "wrangler": "^4.59.1"
  },
  "engines": {
    "node": ">=18.17"
  }
}
